<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/add_snack_dialog">




<androidx.appcompat.widget.AppCompatEditText
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:maxLines="1"
    android:id="@+id/snack_name_entry"
    android:hint="Enter Snack name"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/veggie_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is the snack Veggie?"
            android:gravity="center"
            tools:layout_editor_absoluteX="217dp"
            tools:layout_editor_absoluteY="24dp"
            app:layout_constraintStart_toStartOf="@id/snack_name_entry"
            app:layout_constraintTop_toBottomOf="@id/snack_name_entry"/>

</androidx.constraintlayout.widget.ConstraintLayout>